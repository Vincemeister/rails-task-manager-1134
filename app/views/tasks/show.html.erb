<div class="container d-flex">
  <h1><%= @task.title %></h1>
  <div class="row">
    <%= @task.completed %>
  </div>
  <div class="row background-color-grey h-100">
    <%= @task.details %>
  </div>


  <%= link_to "Back", tasks_path, class: "text-decoration-none btn btn-primary" %>
  <%= link_to "Edit", edit_task_path(@task), class: "text-decoration-none" %>
  <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, delete_task_path(@task), class: "text-decoration-none", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
</div>

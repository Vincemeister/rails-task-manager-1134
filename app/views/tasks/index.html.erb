<h1>All Tasks</h1>
<% @tasks.each do |task| %>
  <p>
    <% if task.completed %>
      <%= "☑" %>
    <% else %>
      <%= "☐" %>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, delete_task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
  </p>
<% end %>
<%= link_to "New Task", new_task_path %>
